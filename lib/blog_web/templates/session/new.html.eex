<h1>Sign in</h1>

<%= form_for @conn, Routes.session_path(@conn, :create), [as: :session], fn f -> %>
  <div class="form-group">
    <%= text_input f, :handle, placeholder: "Username", autocomplete: "username" %>
  </div>

  <div class="form-group">
    <%= password_input f, :password, placeholder: "Password", autocomplete: "current-password" %>
  </div>

  <div class="form-group">
    <%= submit "Login" %>
  </div>
<% end %>
