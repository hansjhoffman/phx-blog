<?xml version="1.0" encoding="UTF-8"?>
  <urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"> 
<%= for post <- @posts do %>
  <url>
    <loc><%= post.slug %></loc>
    <lastmod><%= format_timestamp(post.updated_at) %></lastmod>
  </url>
<% end %>
