<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="ds-alert ds-alert--danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="ds-form-group">
    <%= label f, :title %>
    <%= text_input f, :title, class: "ds-form-control", placeholder: "Elixir rocks!"%>
    <%= error_tag f, :title %>
  </div>

  <div class="ds-form-group">
    <%= label f, :content %>
    <%= textarea f, :content, class: "ds-form-control", rows: "10" %>
    <%= error_tag f, :content %>
  </div>

  <div class="ds-form-group">
    <%= label f, :excerpt %>
    <%= textarea f, :excerpt, class: "ds-form-control", rows: "4" %>
    <%= error_tag f, :excerpt %>
  </div>

  <div class="ds-form-actions">
    <%= submit "Save", class: "ds-btn ds-btn--primary" %>
    <%= link "Cancel", to: Routes.admin_post_path(@conn, :index), class: "ds-btn ds-btn--secondary" %>
  </div>
<% end %>
