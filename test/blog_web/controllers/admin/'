defmodule BlogWeb.TagControllerTest do
  use BlogWeb.ConnCase

  describe "Unauthenticated checks" do
    test "GET /admin", %{conn: conn} do
      conn = get(conn, "/admin")

      assert html_response(conn, 301) 
    end
    
  end

  describe "Authenticated checks" do
    test "GET /admin", %{conn: conn} do
      conn = get(conn, "/admin")

      assert html_response(conn, 200) =~ "Hello world!"
    end
  end
end
